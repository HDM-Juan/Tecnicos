<script>
    document.addEventListener('DOMContentLoaded', function() {
        const paginas = document.querySelectorAll('.pagina');
        const btnAnterior = document.getElementById('btn-anterior');
        const btnSiguiente = document.getElementById('btn-siguiente');
        const barraProgreso = document.getElementById('barra-progreso');
        const contadorPagina = document.getElementById('contador-pagina');
        const totalPaginas = paginas.length;
        const storageKey = 'progresoCursoAtencionProfesional';

        let paginaActual = 0;

        function mostrarPagina(indice) {
            paginas.forEach((pagina, i) => {
                pagina.classList.toggle('activa', i === indice);
            });
            paginaActual = indice;
            actualizarUI();
            localStorage.setItem(storageKey, paginaActual);
        }

        function actualizarUI() {
            btnAnterior.disabled = paginaActual === 0;
            btnSiguiente.disabled = paginaActual === totalPaginas - 1;
            
            const progreso = ((paginaActual + 1) / totalPaginas) * 100;
            barraProgreso.style.width = progreso + '%';

            contadorPagina.textContent = `P√°gina ${paginaActual + 1} de ${totalPaginas}`;
        }

        btnSiguiente.addEventListener('click', () => {
            if (paginaActual < totalPaginas - 1) {
                mostrarPagina(paginaActual + 1);
            }
        });

        btnAnterior.addEventListener('click', () => {
            if (paginaActual > 0) {
                mostrarPagina(paginaActual - 1);
            }
        });

        const progresoGuardado = localStorage.getItem(storageKey);
        if (progresoGuardado !== null) {
            paginaActual = parseInt(progresoGuardado, 10);
        }

        mostrarPagina(paginaActual);
    });

    function evaluarRespuesta(boton, esCorrecta, feedbackId) {
        const feedbackEl = document.getElementById(feedbackId);
        const opciones = boton.parentElement.querySelectorAll('.opcion');

        opciones.forEach(op => {
            op.disabled = true;
        });
        
        if (esCorrecta) {
            boton.classList.add('correcta');
            feedbackEl.style.color = '#0f5132';
            feedbackEl.style.backgroundColor = '#d1e7dd';
            feedbackEl.style.border = '1px solid #badbcc';
            switch(feedbackId) {
                case 'feedback-1':
                    feedbackEl.innerHTML = '<strong>¬°Correcto!</strong> Esta acci√≥n es la base del "Just-in-Time" de la atenci√≥n al cliente. Un segundo de contacto visual crea confianza y evita un desperdicio de oportunidad.';
                    break;
                case 'feedback-2':
                    feedbackEl.innerHTML = '<strong>¬°Excelente!</strong> Esta respuesta conecta con la necesidad espec√≠fica del cliente corporativo y lo ancla en nuestro proceso de calidad al hablar de "folio" y "seguimiento prioritario".';
                    break;
                case 'feedback-3':
                    feedbackEl.innerHTML = '<strong>¬°Muy bien!</strong> El primer paso siempre es escuchar. Permite que el cliente se desahogue y te da los datos clave para el an√°lisis de causa ra√≠z. Es la esencia de una auditor√≠a de calidad.';
                    break;
            }
        } else {
            boton.classList.add('incorrecta');
            feedbackEl.style.color = '#842029';
            feedbackEl.style.backgroundColor = '#f8d7da';
            feedbackEl.style.border = '1px solid #f5c2c7';
            switch(feedbackId) {
                case 'feedback-1':
                    feedbackEl.innerHTML = '<strong>Int√©ntalo de nuevo.</strong> El desperdicio m√°s grande en servicio es la falta de atenci√≥n inicial. Tu prioridad es reconocer la presencia del cliente.';
                    break;
                case 'feedback-2':
                    feedbackEl.innerHTML = '<strong>No es la mejor opci√≥n.</strong> Hablar de problemas o costos de inmediato aumenta la ansiedad del cliente. Primero, conecta con su preocupaci√≥n y con nuestra marca.';
                    break;
                case 'feedback-3':
                    feedbackEl.innerHTML = '<strong>Respuesta incorrecta.</strong> Ponerse a la defensiva o ser burocr√°tico antes de escuchar escala el conflicto. El primer paso es siempre escuchar (Listen).';
                    break;
            }
        }
        feedbackEl.style.display = 'block';
    }
</script>

